{
  "version": "2.3.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "preid": "next",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md",
        "lerna.json"
      ],
      "allowBranch": [
        "master",
        "next",
        "develop",
        "release-*"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s :confetti_ball: :rocket:"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
